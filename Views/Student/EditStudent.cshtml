@using FutureFacePractice.Constants
@model FutureFacePractice.Models.Student

@{
    ViewData["Title"] = "EditStudent";
}

<h1>EditStudent</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Student" asp-action="EditStudent" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="ID" hidden class="control-label"></label>
                <input asp-for="ID" hidden class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <div>
                    <input type="radio" asp-for="Gender" class="form-check-input" name="gender" value="@Genders.Male.ToString()"> Male
                    <input type="radio" asp-for="Gender" class="form-check-input" name="gender" value="@Genders.Female.ToString()"> Female
                    <input type="radio" asp-for="Gender" class="form-check-input" name="gender" value="@Genders.Other.ToString()"> Other
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PinCode" class="control-label"></label>
                <input asp-for="PinCode" class="form-control" />
                <span asp-validation-for="PinCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Center" class="control-label"></label>
                <div class="form-control">
                    <select asp-for="Center" class="form-select">
                        @foreach (var center in Enum.GetNames(typeof(Centers)))
                        {
                            <option value="@center">@center</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="Center" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course" class="control-label"></label>
                <div class="form-control">
                    <select asp-for="Course" class="form-select">
                        @foreach (var course in Enum.GetNames(typeof(Courses)))
                        {
                            <option value="@course">@course</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="Course" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllStudents">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
